- content_for :extra_body_classes, "welcome"

notice = @notice
- title @article.title

section.o-static-page
  header.o-static-page-header
    .o-static-page-header__main
      nav.o-basic-breadcrumbs
        .l-container.is-mxw-100pc
          ol.o-basic-breadcrumbs__items
            li.o-basic-breadcrumbs__item
              = link_to root_path, class: "o-basic-breadcrumbs__item-link" do
                | Home
            li.o-basic-breadcrumbs__item
              = link_to articles_path, class: "o-basic-breadcrumbs__item-link" do
                | お知らせ一覧
            li.o-basic-breadcrumbs__item
              = link_to @article, class: "o-basic-breadcrumbs__item-link" do
                = @article.title
      .l-container
        .o-static-page-header__inner
          .o-static-page-header__title
            | お知らせ

  .o-static-page-body
    .l-container.is-xxl
      .o-static-page-body__inner
        .o-static-article
          .o-static-article__header
            .o-static-article__header-start
              .l-container.is-lg
                h1.o-static-article__title.u-ff-YakuHanJP_Narrow
                  span.js-mikan
                    = @article.title
            .o-static-article__header-end
              .l-container.is-lg
                .m-media-attributes__list
                  .m-inline-list
                    .m-inline-list__items
                      .m-inline-list__item
                        date.m-media-attributes__date
                          | 2020年12月24日
                      .m-inline-list__item
                        .m-media-attributes__author
                          = image_tag("https://via.placeholder.com/100", class: "a-circle-image")
                          .m-media-attributes__author-name
                            | machida
          .o-static-article__body
            .l-container.is-lg
              .a-long-text.js-markdown-view.js-target-blank
                = @article.body
